#out - executing file
#lib - library
NAME = a.out

TEST = test.c

CC = gcc
CFLAGS = -Wall -Werror -Wextra

AR = ar
ARFLAGS = crs

ifeq ($(DEBUG),true)
	CDEBUG = -g
endif

RM = rm
RMFLAGS = -rf

INC_DIR = include

SRC_DIR = ./src
SRC_UTIL_DIR = $(SRC_DIR)/util

SRCS = \
	$(wildcard $(SRC_DIR)/*.c)	\
	$(wildcard $(SRC_UTIL_DIR)/*.c)

OBJS = $(SRCS:.c=.o)

LIBFT = libft
LIBFT_DIR = ./lib/libft
LIBFT_FILE = $(LIBFT_DIR)/$(LIBFT).a
LIBFT_INC_DIR = $(LIBFT_DIR)/include

LIB_DIR = ./lib
LIB_PATH = $(wildcard $(LIB_DIR)/*.a)
LIB_SRCS = $(notdir $(subst lib,,$(subst .a,,$(LIB_PATH))))





all : $(NAME)

bonus : $(NAME)

clean : $(LIBFT)_clean
	@$(RM) $(RMFLAGS) $(OBJS)
	@printf "ðŸ§¹ Cleaning $(NAME)'s Object files...\n"

fclean : $(LIBFT)_fclean clean
	@$(RM) $(RMFLAGS) $(NAME)
	@printf "ðŸ§¹ Cleaning all $(NAME)\n"

re : fclean all

%.o : %.c
	$(CC) $(CFLAGS) $(CDEBUG) -I$(INC_DIR) -I $(LIBFT_INC_DIR) -c $< -o $@
	printf "ðŸš§ Create $@ from$<\n"

# #ìµœì¢… ë¼ì´ë¸ŒëŸ¬ë¦¬ êµ¬ì„±
# $(NAME) : $(LIBFT_FILE) $(OBì„±S)
# 	@$(AR) $(ARFLAGS) $@ $(OBJS)

#ìµœì¢… ì‹¤í–‰ íŒŒì¼ ì œìž‘
$(NAME) : $(LIB) $(OBJS)
	$(CC) $(CFLAGS) -I$(INC_DIR) -I
	 $(TEST) -l$(LIB_SRCS) -L$(LIB_DIR)

$(LIB) : $(LIB_FILE)
	@printf "library achived\n"

$(LIB_FILE) :
	make --no-print-directory -C $(LIB_EACH_DIR)
	mv $(wildcard $(LIB_EACH_DIR)/*.a) $(LIB_DIR)


$(LIBFT) : $(LIBFT_FILE)

#libft makefile ì‹¤í–‰
$(LIBFT_FILE) :
	@make --no-print-directory -C $(LIBFT_DIR)
	mv $(LIBFT_FILE) $(LIB_DIR)

$(LIBFT)_clean :
	@make --no-print-directory -C $(LIBFT_DIR) clean
$(LIBFT)_fclean :
	@make --no-print-directory -C $(LIBFT_DIR) fclean

.PHONY : \
	all clean fclean re \
	@(LIBFT) $(LIBFT)_clean $(LIBFT)_fclean \
	debug \